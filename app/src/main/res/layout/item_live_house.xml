<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="198dp"
    android:layout_margin="10dp">
    <!--主要显示图片-->
    <ImageView
        android:id="@+id/mLiveHouseImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />
    <!--右上角问题-->
    <TextView
        android:id="@+id/mLiveHouseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_marginEnd="15dp"
        android:textColor="@android:color/white"
        tools:text="1.2W" />
    <!--下层文字加图片层-->
    <RelativeLayout
        android:id="@+id/mLiveHouseLay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/half_transparent">
        <!--官方图片层-->
        <ImageView
            android:id="@+id/mLiveHouseNameImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@mipmap/icon_item_news_official" />
        <!--下层文字-->
        <TextView
            android:id="@+id/mLiveHouseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/mLiveHouseNameImg"
            android:ellipsize="end"
            android:maxEms="14"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@android:color/white"
            tools:text="谷歌开源量子计算机代码" />
    </RelativeLayout>

</RelativeLayout>